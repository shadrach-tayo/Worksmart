{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "node src-tauri/scripts/prepareSidecars.js && yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "worksmart",
    "version": "0.1.1"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "all": true,
      "shell": {
        "all": true,
        "open": true,
        "sidecar": true,
        "scope": [{ "name": "binaries/ffmpeg", "sidecar": true }]
      },
      "window": {
        "startDragging": true
      }
    },
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "targets": "all",
      "identifier": "worksmart",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "macOS": {
        "signingIdentity": "-"
      },
      "externalBin": ["../target/binaries/ffmpeg"]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://cdn.crabnebula.app/update/notor/worksmart/{{target}}-{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU5N0NDQ0M2NkVFNUYyOTIKUldTUzh1VnV4c3g4V2VrMWtPRkNCZVM1SjJYc2JrK2xFNytaKzA5LytxUU5sU2JXN1IzV1hyemsK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
